{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Sale",
  "type": "object",
  "properties": {
    "id": { "type": ["string", "null"] },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": ["string", "integer"] },
          "name": { "type": ["string", "null"] },
          "qty": { "type": "number" },
          "priceWithVat": { "type": "number" }
        },
        "required": ["id", "qty", "priceWithVat"],
        "additionalProperties": true
      }
    },
    "total": { "type": ["number", "null"] },
    "originalTotal": { "type": ["number", "null"] },
    "discount": {
      "type": ["object", "null"],
      "properties": {
        "type": { "type": "string", "enum": ["percentage", "amount"] },
        "value": { "type": "number" },
        "discountedTotal": { "type": "number" }
      },
      "additionalProperties": false
    },
    "date": { "type": ["string", "null"], "format": "date-time" },
    "paymentMethod": { "type": ["string", "null"], "enum": ["cash", "card", null] },
    "receiptNo": { "type": ["string", "null"] }
  },
  "required": ["items"],
  "additionalProperties": true
}

